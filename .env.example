# ============================================
# DISCORD BOT CONFIGURATION
# ============================================

# Discord Bot Token (get from https://discord.com/developers/applications)
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID (get from https://discord.com/developers/applications)
DISCORD_CLIENT_ID=your_client_id_here

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite (default for development)
DATABASE_URL="file:./prisma/dev.db"

# PostgreSQL (for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/social_media_watcher?schema=public"

# ============================================
# ENVIRONMENT & LOGGING
# ============================================

# Environment: development or production
NODE_ENV=development

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================
# CRYPTO PAYMENT CONFIGURATION (Premium Tier)
# ============================================

# Enable crypto payment processing
ENABLE_CRYPTO_PAYMENTS=true

# Polygon network RPC endpoint (free tier: https://polygon-rpc.com)
# Other free RPC providers:
#   - https://rpc.ankr.com/polygon
#   - https://matic-mainnet.chainstoreapis.com
POLYGON_RPC_URL=https://polygon-rpc.com

# Your wallet address to receive payments (e.g., 0x123abc...)
# Generate a new wallet at: https://www.myetherwallet.com or https://metamask.io
PAYMENT_WALLET_ADDRESS=0x

# ============================================
# BOT FEATURES & LIMITS
# ============================================

# Check interval for free tier (minutes, default 10)
FREE_TIER_CHECK_INTERVAL=10

# Check interval for premium tier (minutes, default 2)
PREMIUM_TIER_CHECK_INTERVAL=2

# Maximum links per guild for free tier
FREE_TIER_MAX_LINKS=3

# Maximum links per guild for premium tier
PREMIUM_TIER_MAX_LINKS=50

# ============================================
# OPTIONAL: YOUTUBE API (Recommended for better reliability)
# ============================================

# YouTube Data API key for enhanced live stream detection
# Get free quota (10,000 units/day) from: https://console.cloud.google.com/
# YOUTUBE_API_KEY=

# ============================================
# OPTIONAL: AI SUMMARIZATION (Future Feature)
# ============================================

# Enable AI summaries for announcements (requires API key)
ENABLE_AI_SUMMARIES=false

# AI provider: "openai", "cohere", "local"
# AI_PROVIDER=openai

# API key for AI provider
# OPENAI_API_KEY=sk-

# ============================================
# OPTIONAL: MIDTRANS INTEGRATION (Future - Fiat Payments)
# ============================================

# Midtrans Server Key (for fiat payment processing in Indonesia)
# MIDTRANS_SERVER_KEY=

# Midtrans Client Key
# MIDTRANS_CLIENT_KEY=

# ============================================
# DEPLOYMENT & HOSTING
# ============================================

# For Railway.app deployment
# RAILWAY_ENVIRONMENT_ID=xxx

# For Render.com deployment
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# For Fly.io deployment
# FLY_APP_NAME=your-app-name
